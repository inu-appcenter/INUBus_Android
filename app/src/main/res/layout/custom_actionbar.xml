<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/actionbar_height"
    android:background="@color/colorActionBar"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <FrameLayout
        android:id="@+id/btn_actionbar_popup"
        android:layout_width="84dp"
        android:layout_height="41dp"
        android:layout_marginLeft="11dp"
        android:layout_marginBottom="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" >

        <ImageView
            android:layout_width="59dp"
            android:layout_height="14dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="13dp"
            android:layout_marginTop="13dp"
            android:layout_marginBottom="14dp"
            android:clickable="false"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/actionbar_title" />
    </FrameLayout>


    <LinearLayout
        android:id="@+id/ll_start_search"
        android:layout_width="match_parent"
        android:layout_height="28dp"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="55dp"
        android:layout_marginBottom="11dp"
        android:background="@drawable/bg_rounded_coner_searchbox"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        >

        <TextView
            android:id="@+id/tv_start_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="15.5dp"
            android:layout_marginTop="6.4dp"
            android:layout_marginBottom="6.6dp"
            android:fontFamily="@font/notosans_regular"
            android:background="#fafafa"
            android:hint="버스 또는 정류장 검색"
            android:imeOptions="actionSearch"
            android:inputType="textAutoComplete"
            android:letterSpacing="-0.01"
            android:lineSpacingExtra="19sp"
            android:lines="1"
            android:maxLines="1"
            android:textColor="#cbcbcb"
            android:textSize="11sp"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="17.3dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="13.2dp"
            android:gravity="center"
            android:background="@drawable/ic_search_bar">
            <ImageView
                android:layout_width="16.7dp"
                android:layout_height="match_parent"
                android:background="?android:attr/selectableItemBackground"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/btn_actionbar_info"
        android:layout_width="55dp"
        android:layout_height="match_parent"
        android:layout_marginRight="5dp"
        android:gravity="right"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:layout_width="29dp"
            android:layout_height="29dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="11dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="false"
            android:scaleType="fitCenter"
            android:src="@drawable/actionbar_information" />
    </LinearLayout>


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#cbcbcb"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>