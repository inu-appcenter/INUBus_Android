<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="startTime"
            type="String"/>

        <variable
            name="endTime"
            type="String"/>

        <variable
            name="no"
            type="String"/>

        <variable
            name="fee"
            type="String"/>

        <variable
            name="listener"
            type="com.inu.bus.activity.RouteActivity"/>
    </data>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"

        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="68.5dp"
            android:layout_marginTop="-3dp"
            android:background="@color/colorPrimary"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btn_activity_route_close"
                android:layout_width="8.8dp"
                android:layout_height="20.5dp"
                android:layout_marginLeft="19.9dp"
                android:layout_marginTop="16.5dp"
                android:layout_marginBottom="27dp"
                android:background="?android:attr/selectableItemBackground"
                android:foreground="?android:attr/selectableItemBackground"
                android:gravity="center"
                android:onClick="@{()->listener.btnCloseClicked()}"

                android:scaleType="fitCenter"
                android:src="@drawable/ic_arrow_left_white_new"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <!--android:padding="0dp"-->
            <!--android:textColor="@android:color/white"-->
            <!--android:textSize="20sp"-->

            <TextView
                android:id="@+id/route_busno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30.4dp"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="19dp"
                android:fontFamily="@font/source_sans_roman_regula"
                android:gravity="center"
                android:text="@{no}"
                android:textColor="@android:color/white"
                android:textSize="30sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/btn_activity_route_close"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="6" />

            <LinearLayout
                android:id="@+id/linearLayout3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:layout_marginRight="31dp"
                android:layout_marginBottom="21dp"
                android:gravity="center"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/linearLayout4"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/notosans_semibold"
                    android:text="첫차"
                    android:textColor="#ffffff"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/route_start"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/notosans_regular"
                    android:text="@{startTime}"
                    android:textColor="#ffffff"
                    android:textSize="12sp"
                    tools:text="99:99" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:layout_marginRight="31dp"
                android:layout_marginBottom="21dp"
                android:gravity="center"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/linearLayout2"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/notosans_semibold"
                    android:text="막차"
                    android:textColor="#ffffff"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/route_end"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/notosans_regular"
                    android:text="@{endTime}"
                    android:textColor="#ffffff"
                    android:textSize="12sp"
                    tools:text="99:99" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:layout_marginRight="21dp"
                android:layout_marginBottom="21dp"
                android:gravity="center"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/notosans_semibold"
                    android:text="요금"
                    android:textColor="#ffffff"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/notosans_regular"
                    android:text="@{fee}"
                    android:textColor="#ffffff"
                    android:textSize="12sp"
                    tools:text="9999" />

            </LinearLayout>

        </android.support.constraint.ConstraintLayout>

        <RelativeLayout
            android:id="@+id/relative1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_toRightOf="@id/btn_route_refresh">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_route_activity_recycler"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                app:layoutManager="android.support.v7.widget.LinearLayoutManager"
                tools:listitem="@layout/recycler_route_item">

            </android.support.v7.widget.RecyclerView>

            <ImageButton
                android:id="@+id/btn_route_refresh"
                android:layout_width="44.6dp"
                android:layout_height="44.6dp"
                android:alpha="1.0"
                android:layout_marginBottom="86.1dp"
                android:layout_marginRight="17.2dp"
                android:background="@drawable/bg_refresh"
                android:contentDescription="refresh"
                android:elevation="5dp"
                android:scaleType="fitXY"
                android:src="@drawable/click_refresh"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true" />

        </RelativeLayout>
    </LinearLayout>
</layout>