<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="263.9dp"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:layout_gravity="end"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageButton
        android:id="@+id/btn_back"
        android:layout_width="31dp"
        android:layout_height="31dp"
        android:layout_marginLeft="12.2dp"
        android:layout_marginTop="6.1dp"
        android:padding="0.65dp"
        android:scaleType="fitCenter"
        android:background="?android:attr/selectableItemBackground"
        android:contentDescription="@null"
        android:src="@drawable/ic_arrow_left_blue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:visibility="invisible"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="6.2dp"
        android:fontFamily="@font/notosans_regular"
        android:text="Information"
        android:textColor="#838383"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_info"
        app:layout_constraintEnd_toStartOf="@+id/iv_info"
        app:layout_constraintTop_toTopOf="@+id/iv_info" />

    <ImageView
        android:id="@+id/iv_info"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginRight="15.5dp"
        android:layout_marginTop="20.5dp"
        android:background="@android:color/transparent"
        android:scaleType="fitXY"
        android:src="@drawable/actionbar_information"
        android:contentDescription="@null"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="46.1dp"
        android:layout_marginTop="105.2dp"
        android:fontFamily="@font/nanum_square_b"
        android:text="@string/app_name"
        android:textColor="#000000"
        android:textSize="21sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/textView"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="fill_horizontal"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="@id/tv1"
        app:layout_constraintTop_toBottomOf="@+id/tv1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nanum_square_r"
                android:text="Version"
                android:textColor="#707070"
                android:textSize="17sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="end">
            <TextView
                android:id="@+id/tv_drawer_version"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nanum_square_r"
                android:textColor="#707070"
                android:textSize="17sp"
                tools:text="1.00" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/drawer_btn_ask"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25.2dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/notosans_semibold"
            android:text="문의사항"
            android:textColor="#707070"
            android:textSize="15sp" />

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginLeft="13.9dp"
            android:background="@drawable/ic_inquire"
            android:scaleType="fitXY"
            android:text="icon" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/teaminfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="41.2dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="@+id/drawer_btn_ask"
        app:layout_constraintTop_toBottomOf="@+id/drawer_btn_ask">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/notosans_regular"
            android:lineSpacingExtra="17sp"
            android:text="개발자(Android)\n개발자(iOS)\n개발자(서버)\n디자이너(Android)\n디자이너(iOS)"
            android:textColor="#000000"
            android:textSize="11sp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="46.2dp"
            android:fontFamily="@font/notosans_regular"
            android:lineSpacingExtra="17sp"
            android:text="손민재\n이준상\n임헌준\n한지연\n서연재"
            android:textColor="#000000"
            android:textSize="11sp" />

    </LinearLayout>


    <TextView
        android:id="@+id/note"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="21.5dp"
        android:fontFamily="@font/notosans_regular"
        android:gravity="left"
        android:lineSpacingExtra="6sp"
        android:text="이 데이터는 계산한 수치 값으로\n정확하지 않을 수 있습니다"
        android:textColor="#ff4907"
        android:textSize="9sp"
        app:layout_constraintLeft_toLeftOf="@id/teaminfo"
        app:layout_constraintTop_toBottomOf="@id/teaminfo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="9sp"
        android:textColor="#838383"
        android:lineSpacingExtra="5sp"
        android:gravity="center_horizontal"
        android:text="이 앱은 공공데이터를 이용한 앱입니다\nThis application uses public data"
        android:fontFamily="@font/nanum_square_b"
        android:layout_marginBottom="15.5dp"
        android:layout_marginLeft="69dp"
        android:layout_marginRight="54.9dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />


</android.support.constraint.ConstraintLayout>