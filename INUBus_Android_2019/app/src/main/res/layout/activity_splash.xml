        android:textColor="#000000"
        android:textSize="23.4sp"
        android:drawablePadding="37.5dp"
        android:drawableTop="@drawable/ic_logo"
        android:textAllCaps="true"
        android:fontFamily="@font/source_sanspro_semibold_it"
        />

</LinearLayout>
