<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.appcenter.inubus">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="false"
        android:icon="@drawable/app_logoicon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_inubus_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">

        <service android:name="com.appcenter.inubus.MyService" />

        <activity
            android:name="com.appcenter.inubus.activity.SplashActivity"
            android:theme="@style/AppTheme.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.appcenter.inubus.activity.MainActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.appcenter.inubus.activity.RouteActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.appcenter.inubus.activity.SearchActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name="com.appcenter.inubus.activity.InquireActivity"
            android:windowSoftInputMode="adjustResize" />
    </application>

</manifest>